  top 22%
  left 28%
.feature-pane-1-2
  top 34.5%
  left 55%
.feature-pane-2-1
  top 8%
  left 15%
.feature-pane-2-2
  top 49.5%
  left 53%
.feature-pane-2-3
  top 70%
  left 40.3%
.feature-pane-2-4
  top 23.4%
  left 72%
.feature-pane-2-5
  top 48%
  left 73%

.feature-pane-3-1
  top 8%
  left 15%
.feature-pane-3-2
  top 17%
  left 45%
.feature-pane-3-3
  top 54%
  left 88%
.feature-pane-3-4
  top 83%
  left 83%
